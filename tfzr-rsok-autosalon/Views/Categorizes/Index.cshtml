@model IEnumerable<tfzr_rsok_autosalon.Viewmodels.CategorizesViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CATEGORIES</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Model.Name
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Model.Id }, new {@class="btn btn-warning"})
                @Html.ActionLink("Delete", "Delete", new { id = item.Model.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
    </tbody>
</table>