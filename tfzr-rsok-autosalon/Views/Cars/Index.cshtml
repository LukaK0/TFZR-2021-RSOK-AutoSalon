@model IEnumerable<tfzr_rsok_autosalon.Viewmodels.CarsViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CARS</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Manufacturer</th>
        <th>Category</th>
        <th>Car model</th>
        <th>HP</th>
        <th>Torque</th>
        <th>Doors</th>
        <th>Desc.</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Model.Manufacturers.Name
            </td>

            <td>
                @item.Model.Categorizes.Name
            </td>

            <td>
                @item.Model.CarModels.Name
            </td>

            <td>
                @item.Model.HorsePower <span>HP</span>
            </td>
            <td>
                @item.Model.Torque <span>Nm</span>
            </td>
            <td>
                @item.Model.NumberOfDoors <span>doors</span>
            </td>
            <td>
                @item.Model.Description
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Model.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "Details", new { id = item.Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Model.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
    </tbody>
</table>