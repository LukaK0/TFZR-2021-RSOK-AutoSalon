@model IEnumerable<tfzr_rsok_autosalon.Viewmodels.OrdersViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<table class="table">
    <thead>
    <tr>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Model.Car.CarModels.Name @item.Model.Car.Manufacturers.Name
            </td>
            <td>@item.Model.DateOfPurchase.Date</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Model.Id }, new { @class = "btn btn-danger" })
                @(item.Model.Status == 0 ? 
                    Html.ActionLink("Accept", "Accept", new {id = @item.Model.Id}, new {@class="btn btn-sucess"})
                        :
                    Html.ActionLink("Decline", "Decline", new {id = @item.Model.Id}, new {@class="btn btn-warning"})
                    )
            </td>
        </tr>
    }
    </tbody>
</table>