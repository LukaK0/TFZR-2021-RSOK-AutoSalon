@model tfzr_rsok_autosalon.Models.CarModels
@inject tfzr_rsok_autosalon.Services.IServices.ICarModelsService _carModelsService

@{
    Layout = "_Layout";
}

<h2>Create new car model</h2>
<form asp-controller="CarModels" asp-action="Add" method="post" enctype="multipart/form-data">
    <label asp-for="Name"></label>
    <br />
    <input class="form-control" asp-for="Name" />
    <br />
    <label asp-for="Manufacturer"></label>
    <br />
    <select class="form-select" asp-for="ManufacturerId" asp-items="@_carModelsService.GetManufacturersForDropDown()"></select>
    <br />
    <label asp-for="Category"></label>
    <br />
    <select class="form-select" asp-for="CategoryId" asp-items="@_carModelsService.GetCategoryForDropDown()"></select>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>